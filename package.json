{
  "name": "mtts-rest",
  "version": "1.0.0",
  "description": "My node/ts rest api template",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run api",
    "api": "pm2 start dist/index.js --watch --name mtts-rest",
    "build": "ts-node src/scripts/build.ts",
    "build-linux": "rm -rf dist/ && tsc && gulp minify",
    "build-windows": "rd /s /q dist && tsc && gulp minify",
    "watch": "nodemon -e ts -w ./src -x npm run watch:serve",
    "watch:serve": "npx ts-node src/app.ts"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/jsonwebtoken": "^8.3.9",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-uglify": "^3.0.2",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^2.0.3",
    "pm2": "^4.1.2",
    "require-dir": "^1.2.0",
    "uglify-es": "^3.3.9",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/node": "^12.12.3",
    "@types/require-dir": "^1.0.0",
    "typescript": "^3.6.4"
  }
}
