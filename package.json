{
  "name": "mtts-rest",
  "version": "1.0.0",
  "description": "My node/ts rest api template",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && npm run api",
    "api": "npx pm2 start dist/app.js --name mtts-rest",
    "build": "gulp clean && tsc && gulp minify && gulp public",
    "watch": "npx nodemon -e ts -w ./src -x npm run watch:serve",
    "watch:serve": "npx ts-node src/app.ts",
    "commit": "npx git-cz",
    "test": "exit 0"
  },
  "keywords": [],
  "author": "Nathan Botelho <nimbotelho@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.19.0",
    "commitizen": "4.1.2",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "gulp": "4.0.2",
    "gulp-clean": "0.4.0",
    "gulp-uglify": "3.0.2",
    "jsonwebtoken": "8.5.1",
    "nodemon": "2.0.3",
    "pm2": "4.1.2",
    "require-dir": "1.2.0",
    "uglify-es": "3.3.9",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@types/cors": "2.8.6",
    "@types/express": "4.17.1",
    "@types/node": "12.12.3",
    "@types/require-dir": "1.0.0",
    "@types/jsonwebtoken": "8.3.9",
    "eslint": "7.0.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-import-helpers": "1.0.2",
    "husky": "4.2.5",
    "lint-staged": "10.2.2",
    "tslint": "6.1.2",
    "typescript": "3.6.4"
  }
}
